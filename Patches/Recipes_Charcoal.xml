<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- default is 50 wood logs to 100 charcoal or 1:2, this makes it 1:3 -->
    <Operation Class="XmlExtensions.PatchOperationSafeAddOrReplace">
        <xpath>Defs/RecipeDef[defName="Make_CharcoalFromWood"]</xpath>
        <value>
            <ingredients>
                <li>
                    <count>40</count>
                </li>
            </ingredients>
            <products>
                <Charcoal>120</Charcoal>
            </products>
        </value>
    </Operation>

    <!-- wood weighs 0.40kg, so 40x0.4 = 16kg -->
    <!-- by default charcoal weighs 0.30kg so 120x0.3 = 36kg (should be less total mass) -->
    <Operation Class="XmlExtensions.PatchOperationSafeAddOrReplace">
        <xpath>Defs/ThingDef[defName="Charcoal"]</xpath>
        <value>
            <statBases>
                <MarketValue>0.8</MarketValue>
                <Mass>0.12</Mass>
            </statBases>
        </value>
    </Operation>

    <!-- take coal from 0.30kg down a bit to be closer to charcoal mass -->
    <Operation Class="XmlExtensions.PatchOperationSafeAddOrReplace">
        <xpath>Defs/ThingDef[defName="Coal"]</xpath>
        <value>
            <statBases>
                <MarketValue>1.1</MarketValue>
                <Mass>0.18</Mass>
            </statBases>
        </value>
    </Operation>

</Patch>
